  "scripts": {
    "dev": "yarn run watch:server & yarn run watch:client",
    "watch:server": "nodemon --legacy-watch start.js --watch server --watch client",
    "watch:client": "webpack serve --config ./webpack.dev.config.js --open",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js --progress  --profile",
    "start": "cross-env NODE_ENV=production && node start.js",
    "heroku-postbuild": "yarn run build:prod"
  },
